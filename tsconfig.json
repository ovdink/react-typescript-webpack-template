{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": false,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "esnext",
        "target": "es6",
        "baseUrl": "./src",
        "importHelpers": true,
        "noUnusedLocals": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "node",
        "typeRoots": ["src/types/**/*.d.ts", "node_modules/@types"]
    },
    "include": ["src", "./node_modules/@types"],
    "exclude": ["node_modules", "**/*.js", "**/*.spec.ts", "**/*.spec.tsx"]
}
